<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">#0039CB</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="shapeAppearanceMediumComponent">@style/AppShapeAppearance</item>
        <item name="shapeAppearanceLargeComponent">@style/AppShapeAppearance</item>
        <item name="shapeAppearanceSmallComponent">@style/AppShapeAppearanceSmallComponents</item>
        <item name="fabAnimationMode">scale</item>
    </style>

    <style name="Theme.MyTheme.OtherSide">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorAccent">@color/bambuk</item>
        <item name="android:colorBackground">@color/light_gray</item>
        <item name="shapeAppearance">@style/AppShapeAppearance</item>
        <item name="shapeAppearanceMediumComponent">@style/AppShapeAppearance.Martian</item>
        <item name="shapeAppearanceLargeComponent">@style/AppShapeAppearance.Martian</item>
        <item name="shapeAppearanceSmallComponent">@style/AppShapeAppearanceSmallComponents.Martian</item>
        <item name="fabAnimationMode">slide</item>
        <item name="android:backgroundTint">@color/blue</item>
    </style>

    <style name="AppShapeAppearance" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">27dp</item>
    </style>
    <style name="AppShapeAppearanceSmallComponents" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">25dp</item>
    </style>

    <style name="AppShapeAppearance.Martian">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">15dp</item>
    </style>
    <style name="AppShapeAppearanceSmallComponents.Martian">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">10dp</item>
    </style>
</resources>