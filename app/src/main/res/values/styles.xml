<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">#0039CB</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="colorError">#F44336</item>
        <item name="colorOnError">#FFFFFF</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnSurface">#212121</item>
        <item name="colorOnBackground">#212121</item>
        <item name="android:background">@color/mint_green</item>
    </style>

    <style name="AppTextField" parent="Widget.MaterialComponents.TextView">
        <item name="backgroundTint">@color/white_white</item>
        <item name="background">@color/white_white</item>
        <item name="textFillColor">@color/red_dark</item>
        <item name="android:textColorTertiary">@color/red_dark</item>
        <item name="android:textColor">@color/red_dark</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:layout_margin">20dp</item>
    </style>

    <style name="AppTheme.AppTextField.BottomSheet" parent="Widget.MaterialComponents.TextView">
        <item name="backgroundTint">@color/white_white</item>
        <item name="textFillColor">@color/red_dark</item>
        <item name="android:textColorTertiary">@color/red_dark</item>
        <item name="android:textColor">@color/red_dark</item>
    </style>


    <style name="BottomNavigationView" parent="Widget.MaterialComponents.NavigationRailView">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Line">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:background">@color/background_for_line</item>
    </style>

    <style name="Description">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Photo">
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="Photo.OfDay">
        <item name="android:layout_height">0dp</item>
        <item name="android:contentDescription">@string/photo_of_the_day_stub</item>
    </style>
</resources>
